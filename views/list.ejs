<%- include("header") -%>
<div class="box" id="heading">
    <h1><%= listType %></h1>
    </div>
    <div class="box">
        <% items.forEach(function(item){ %>
            <form class="complete" action="/done" method="post">
                <div class="item">
                    <input type="checkbox" name="isDone" onchange="this.form.submit()" value="<%= item._id %>:<%= listType %>">
                    <p><%= item.name %></p> 
                </div>
            </form>
        <% }); %>
    <form class="item" action="/" method="post">
        <input type="text" name="task" placeholder="Type your task" autocomplete="off">
        <button type="submit" name="list" value="<%= listType %>">+</button>
    </form>
</div>
<%- include("footer") -%>
